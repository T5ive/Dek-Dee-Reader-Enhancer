{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"vcs": {
		"clientKind": "git",
		"enabled": true,
		"useIgnoreFile": true
	},
	"formatter": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"ignore": [
			"**/node_modules/**",
			"**/.vitepress/cache/**",
			"**/.vitepress/dist/**",
			"**/dist/**",
			"**/*.min.js",
			"**/*.d.ts",
			"**/public/**"
		],
		"rules": {
			"recommended": true,
			"style": {
				"useNodejsImportProtocol": "off",
				"useImportType": "off"
			},
			"correctness": {
				"noUnusedVariables": "off"
			},
			"a11y": {
				"noLabelWithoutControl": "off",
				"noSvgWithoutTitle": "off"
			}
		}
	},
	"files": {
		"ignoreUnknown": true,
		"ignore": [
			"**/node_modules/**",
			"**/.git/**",
			"**/.vitepress/cache/**",
			"**/.vitepress/dist/**",
			"**/dist/**",
			"**/*.min.js",
			"**/public/**",
			"**/package-lock.json",
			"**/yarn.lock",
			"**/pnpm-lock.yaml"
		]
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single"
		}
	}
}